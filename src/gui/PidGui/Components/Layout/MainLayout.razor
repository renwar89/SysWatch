@inherits LayoutComponentBase

<div class="page">
    <header class="navbar">
        <div class="container-xl navbar-inner">
            <button class="navbar-toggler" type="button" aria-label="Toggle navigation" @onclick="ToggleNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">
                <span class="brand-mark">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M3 12h4l3 8l4 -16l3 8h4"></path>
                    </svg>
                </span>
                <span class="brand-text">PidGui</span>
            </a>
            <nav class="navbar-menu@(_navOpen ? " show" : string.Empty)">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                    <span class="nav-link-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                        </svg>
                    </span>
                    <span class="nav-link-title">Dashboard</span>
                </NavLink>
                <a class="nav-link" href="/#processes">
                    <span class="nav-link-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <rect x="7" y="9" width="14" height="10" rx="2"></rect>
                            <circle cx="17" cy="14" r="3"></circle>
                            <polyline points="4 12 4 6 8 6"></polyline>
                        </svg>
                    </span>
                    <span class="nav-link-title">Processes</span>
                </a>
                <NavLink class="nav-link" href="/network">
                    <span class="nav-link-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <circle cx="12" cy="12" r="4"></circle>
                            <circle cx="3" cy="12" r="2"></circle>
                            <circle cx="21" cy="12" r="2"></circle>
                            <line x1="5" y1="12" x2="8" y2="12"></line>
                            <line x1="16" y1="12" x2="19" y2="12"></line>
                        </svg>
                    </span>
                    <span class="nav-link-title">Network</span>
                </NavLink>
                <a class="nav-link" href="/#filters">
                    <span class="nav-link-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M4 6h16"></path>
                            <path d="M6 12h12"></path>
                            <path d="M10 18h4"></path>
                        </svg>
                    </span>
                    <span class="nav-link-title">Filters</span>
                </a>
            </nav>
            <div class="navbar-actions">
                <div class="input-icon navbar-search">
                    <span class="input-icon-addon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="18" height="18" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <circle cx="10" cy="10" r="7"></circle>
                            <line x1="21" y1="21" x2="15" y2="15"></line>
                        </svg>
                    </span>
                    <input type="text" class="form-control" placeholder="Search processes..." />
                </div>
                <div class="user-pill">
                    <span class="avatar">SA</span>
                    <div class="user-meta">
                        <div class="user-name">System Admin</div>
                        <div class="user-role">Local session</div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="page-wrapper">
        <main class="page-body">
            @Body
        </main>

        <footer class="footer">
            <div class="container-xl footer-inner">
                <div class="footer-left">
                    <span class="text-muted">PidGui Dashboard</span>
                    <span class="footer-dot">|</span>
                    <span class="text-muted">v1.0.0</span>
                </div>
                <div class="footer-right">
                    <a class="link-secondary" href="https://github.com/tabler/tabler" target="_blank" rel="noopener noreferrer">Design reference</a>
                </div>
            </div>
        </footer>
    </div>
</div>

@code {
    private bool _navOpen;

    private void ToggleNav()
    {
        _navOpen = !_navOpen;
    }
}
